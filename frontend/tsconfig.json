{
  "emitDeclarationOnly": true,
  "allowJS": true,
  "checkJS": true,
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Node",
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "dist/types",
    "lib": ["es6", "es7", "esnext", "dom", "es2017"],
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~/*": ["src/*"],
      "react": ["node_modules/react/"]
    }
  },
  "include": ["src", "plugins", "default-content", "packages"]
}
