@require '~app/shared/mixins'
@require '~app/shared/colors'
@require "~app/admin/module"

.data-model-links :global(.link-card)
  margin-bottom 1em

.minimal-navbar
  display: flex
  flex-direction: row
  align-items: baseline
  minimal-navbar()
  h4
    margin: 0
    padding: 0.1em 1em 0.1em 0.4em
    color: #5c7080
    min-width: 5em
  :global(.spacer)
    flex-grow 1

.home-link-button
  margin-right: 1em
  vertical-align: baseline
  transform: translateY(3px)

.admin,.catalog
  margin-top 5px

.content-area
  display flex
  flex-direction row
  h5:first-child
    margin-right 1em
    min-width 8em
  ul
    flex-grow 1
    margin-bottom 0.25em

.project-card
  margin-bottom 1em
  h3
    margin-top 0
  h5
    margin-bottom 0.2em
    margin-top 0.5em
  .samples,.publications
    margin-top 0.2em
    list-style-type none
    padding-left 0
    li
      display inline-block
      padding 0 0.5em 0.2em
      border-radius 3px
      margin-right 0.5em

.flex-row
  display flex
  flex-direction row
  &>*
    flex 1
    margin-right 1em
    &:last-child
      margin-right 0em

.embargo-control-panel
  width 160px
  min-height: 2em
  padding 1em

.admin-page-main
  display flex
  flex-direction row
  position fixed
  top 50px
  bottom 0
  left 0
  right 0
  .left-panel
    z-index 1
    width 28em
    overflow-y: auto
    overflow-x hidden
    padding 0 1em 0 1em
    transition .6s margin ease
    &.hidden
      margin 0 0 0 -29.5em
      transition .6s margin ease

  .right-panel
    flex 1
    padding 0 3em 0 2em
    overflow-y: scroll

@keyframes leftArrow
  0%  {left: 500px}
  100% {left: 0px}

.animatedarrow
  position relative
  animation leftArrow 3s infinite

