@import "~app/shared/colors"
:global
  @import "./datasheet"

  //@require "~react-datasheet/lib/react-datasheet.css";
  //@import "./datasheet.css"

.bp3-dark .data-sheet
  --datasheet-read-only-background: $dark-gray3

.data-sheet
  --datasheet-read-only-background: whitesmoke
  position absolute
  top 0px
  left 0em
  right 0em
  bottom 0px
  display flex
  flex-direction column
  padding 0 1em
  tbody
    padding-bottom 2em
  // https://css-tricks.com/position-sticky-and-table-headers/
  th
    position sticky
    top 0
    background-color: var(--datasheet-read-only-background)


:global
  .sheet-header 
    display flex
    flex-direction row
    align-items: baseline;

  .sheet-actions
    align-items: baseline;
    &>*
      display inline-block
      margin-right 0.5em

  .sheet-header
    padding-top 1em
    margin-bottom 0.5em
    h3
      padding 0
      margin 0
      margin-right 1em
      color $gray1
    .spacer
      flex-grow 1

  .sheet
    flex 1
    position relative
    display flex
    flex-direction column

  table.data-grid
    position absolute
    top 0
    left 0
    right 0
    bottom 0
