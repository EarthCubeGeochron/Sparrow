@import "~app/shared/colors"

span.data-grid-container,
span.data-grid-container:focus {
  outline: none;
}

.bp3-dark .data-grid-container
  --read-only-background: $dark-gray4
  --border-color: $dark-gray5


.data-grid-container
  --read-only-background: whitesmoke
  --border-color: #ddd
  .data-grid
    table-layout: fixed;
    border-collapse: collapse;
    .cell
      height: 17px;
      white-space: nowrap;
      user-select: none;
      overflow: hidden;
      user-select: none;
      -moz-user-select: none;
      -webkit-user-select: none;
      -ms-user-select: none;
      cursor: cell;
      background-color: unset;
      transition: background-color 500ms ease;
      vertical-align: middle;
      text-align: right;
      border: 1px solid var(--border-color);
      padding: 0;
      padding-right: 2px;
      &.selected
        border: 1px double rgb(33, 133, 208);
        transition: none;
        box-shadow: inset 0 -100px 0 rgba(33, 133, 208, 0.15);
      &.editing
        border: 1px double rgb(208, 97, 33);
        transition: none;
        box-shadow: inset 0 -100px 0 rgba(92, 25, 17, 0.15);
      &.edited
        border: 1px double rgb(83, 246, 7);
        transition: none;
        box-shadow: inset 0 -100px 0 rgba(6, 167, 0, 0.15);
      &.header, &.index
        background: var(--read-only-background);
        text-align: center;
        color: #999;
      &.header
        font-weight: bold
      &.read-only
        color: #999;
      &>.text
        padding: 2px 5px;
        text-overflow: ellipsis;
        overflow: hidden;
      &>input
        outline: none !important;
        border: 2px solid rgb(33, 133, 208);
        text-align: right;
        width: calc(100% - 2px);
        height: 17px;
        background: none;
        display: block;

      .value-viewer, .data-editor
        display: block;

    .cell,
    &.wrap .cell,
    &.wrap .cell.wrap,
    .cell.wrap,
    &.nowrap .cell.wrap,
    &.clip .cell.wrap {
      white-space: normal;
    }

    &.nowrap .cell,
    &.nowrap .cell.nowrap,
    .cell.nowrap,
    &.wrap .cell.nowrap,
    &.clip .cell.nowrap {
      white-space: nowrap;
      overflow-x: visible;
    }

    &.clip .cell,
    &.clip .cell.clip,
    .cell.clip,
    &.wrap .cell.clip,
    &.nowrap .cell.clip {
      white-space: nowrap;
      overflow-x: hidden;
    }
