.tasks-page
  display flex
  flex-direction: row
  height: 100%

.tasks-main
  flex-grow 1
  display flex
  flex-direction: column
  margin-bottom: -2em
  .navbar
    align-items: baseline
  h3
    margin 0
    padding 0
    margin-right 1em

.message-history
  font-family: monospace
  font-size 14px
  background-color: #222

.left-column
  max-width 20em
  margin-right 1em

.log-window
  flex-grow 1
  overflow-y hidden

ansi($color)
  color: $color
  &.dim
    color: darken($color, 50%)

.message-history .message
  span
    &.bold
      font-weight bold
    ansi(rgb(255, 255, 255))
    &.dark-gray
      ansi(rgb(128, 128, 128))
    &.red
      ansi(rgb(255, 0, 0))
    &.green
      ansi(rgb(0, 255, 0))
    &.yellow
      ansi(rgb(255, 255, 0))
    &.blue
      ansi(rgb(0, 0, 255))
    &.magenta
      ansi(rgb(255, 0, 255))
    &.cyan
      ansi(rgb(0, 255, 255))