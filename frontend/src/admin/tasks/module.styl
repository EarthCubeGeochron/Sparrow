.tasks-page
  display flex
  flex-direction: row
  height: 100%

.tasks-main
  flex-grow 1
  display flex
  flex-direction: column
  margin-bottom: -2em
  .navbar
    align-items: baseline
    z-index 10
  h3
    margin 0
    padding 0
    margin-right 1em

.message-history
  font-family: monospace
  font-size 14px

.left-column
  max-width 20em
  margin-right 1em

.log-window
  flex-grow 1
  overflow-y hidden
  margin-top: -1em
  padding: 0 0.25em

ansi($color)
  color: darken($color, 60%)
  &.dim
    color: $color

.message-history
  background-color: #f0f0f0
  .message
    padding: 0 1em
    .lineno
      font-size: 0.8em
      margin-right: 1em
      
    span
      &.bold
        font-weight bold
      &.italic
        font-style italic
      ansi(lighten(#1a1b27, 70%))
      &.dark-gray
        ansi(lighten(#1a1b27, 20%))
      &.red
        ansi(#ff6c8d)
      &.green
        ansi(#8dcd5a)
      &.yellow
        ansi(#ee8951)
      &.blue
        ansi(#71a1fe)
      &.magenta
        ansi(#c296fe)
      &.cyan
        ansi(#00a2bf)

:global(.bp3-dark)
  ansi($color)
    color: $color
    &.dim
      color: darken($color, 40%)

  .message-history
    background-color: #1a1b27
    .message
      padding: 0 1em
      span
        &.bold
          font-weight bold
        &.italic
          font-style italic
        ansi(lighten(#1a1b27, 70%))
        &.dark-gray
          ansi(lighten(#1a1b27, 20%))
        &.red
          ansi(#ff6c8d)
        &.green
          ansi(#8dcd5a)
        &.yellow
          ansi(#ee8951)
        &.blue
          ansi(#71a1fe)
        &.magenta
          ansi(#c296fe)
        &.cyan
          ansi(#00a2bf)