@require "~app/shared/colors"

.pub-edit-card
  display flex
  background-color: $light-gray4
  border-radius: 5px
  margin: 10px
  padding: 10px 15px
  flex-grow: 1

.drawer-body
  display flex
  flex-direction column
  margin 5px
  padding 10px
  border-style solid
  border-color #D8E1E8
  border-radius 5px
  border-width 0.5px

.divi
  padding 10px

.header
  display flex 
  flex-direction column
  align-content flex-start

.drawer-add
  overflow-y scroll

.sample-loc-inputs
  display flex 
  flex-direction column
.sample-loc-inputs-long
  display flex
  justify-content space-between

.metadata-body
  display flex 
  justify-content space-between
  margin-top 20px

.location
  display flex
  justify-content space-between
.sample-map
  width 70%

.geo-entity-drop
  display flex 
  justify-content space-between

.geo-entity-card
  min-width 400px
  padding 10px
  padding-top 0px

.help-geo-entity
  max-width 500px
  min-height 150px
  padding 15px
  display flex 
  flex-direction column
  justify-content space-between


.add-button-top
  margin 5px 1px 1px 0px

.entity-edit-card
  display flex
  justify-content space-between
  background-color: $light-gray4
  border-radius: 5px
  margin: 5px
  padding: 5px 10px
  flex-grow: 1
  max-width: 20em
  .location-name
    color: $indigo3
  .material
    font-style italic
  .samhover
    background-color yellow
  h4
    margin-top: 0em
    margin-bottom: 0em