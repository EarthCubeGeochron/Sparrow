@require "~app/shared/colors"

.model-card
  background-color: $light-gray4
  border-radius: 5px
  margin: 5px
  padding: 5px 10px
  flex-grow: 1
  max-width: 15em
  .location-name
    color: $indigo3
  .material
    font-style italic
  h4
    margin-top: 0em
    margin-bottom: 0em

.model-card-link
  font-size: 10px
  margin-left: 10px
  font-style: italic


.indirect-link
  background-color: $light-gray5
  border-radius: 5px
  border-style: dashed
  border-color $light-gray1
  border-width: 1px
  margin: 5px
  padding: 5px 10px
  flex-grow: 1
  max-width: 15em
  box-shadow: none !important
  &:hover
    background-color: $light-gray4
  .location-name
    color: $indigo3
  .material
    font-style italic
  h4
    margin-top: 0em
    margin-bottom: 0em