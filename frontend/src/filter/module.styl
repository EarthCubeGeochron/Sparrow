@require '~app/shared/mixins'
@require '~app/shared/colors'

.minimal-navbar
  display: flex
  flex-direction: row
  align-items: baseline
  minimal-navbar()
  h4
    margin: 0
    padding: 0.1em 1em 0.1em 0.4em
    color: #5c7080
    min-width: 5em

.home-link-button
  margin-right: 1em
  vertical-align: baseline
  transform: translateY(3px)

.admin,.catalog
  margin-top 5px

.content-area
  display flex
  flex-direction row
  h5:first-child
    margin-right 1em
    min-width 8em
  ul
    flex-grow 1
    margin-bottom 0.25em

.project-card
  margin-bottom 1em
  h3
    margin-top 0
  h5
    margin-bottom 0.2em
    margin-top 0.5em
  .samples,.publications
    margin-top 0.2em
    list-style-type none
    padding-left 0
    li
      display inline-block
      padding 0 0.5em 0.2em
      border-radius 3px
      margin-right 0.5em

.model-edit-text
  c1 = alpha($gray1, 0.1)
  c2 = alpha($bp3-intent-success,0.1)
  box-shadow: 0 0 0 3px c1;
  background-color: c1
  border-radius: 2px
  &:global(.bp3-intent-success)
    background-color: c2;
    box-shadow: 0 0 0 3px c2;

.project-editor-navbar
  align-items normal
  display flex
  flex-direction: row
  justify-content space-between
  &>*
    margin-right 2em
    &:last-child
      margin-right 0
  h4
    padding-top 0.5em
    flex-grow 1

.flex-row
  display flex
  flex-direction row
  &>*
    flex 1
    margin-right 1em
    &:last-child
      margin-right 0em

.embargo-control-panel
  width 160px
  min-height: 2em
  padding 1em

// TODO: This is super sketchy with the width
.list-component
  position -webkit-sticky 
  position sticky
  width 100%
  top 0px
  //min-width 364px
  padding-top 10px
  background-color var(--background-color)

.vertical
  transform rotate(90deg)
  float left 
  
.tag-container
  display flex
  felx-wrap: wrap
.tag-individ
  margin 3px